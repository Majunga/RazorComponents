@inherits ModalBase

<div class="modal @CssClass" id="IngredientModal" tabindex="-1" role="dialog" style="display:@Display">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="IngredientModalLabel">@Title</h5>
                <button type="button" class="close" @onclick="@ToggleVisibility">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer">
                <button type="button" data-role="close-modal"  class="btn btn-secondary" @onclick="@ModalService.Hide">Close</button>
                <button type="submit" data-role="submit-modal" class="btn btn-primary"        >Save</button>
            </div>
        </div>
    </div>
</div>
